{
  "name": "bentools/treerex",
  "description": "\uD83E\uDD96 Declarative YAML flowcharts for complex decision trees.",
  "keywords": ["decision tree", "flowchart", "yaml"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Benoit POLASZEK",
      "email": "bpolaszek@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "psr/container": "^2.0",
    "symfony/yaml": "^7.3|^8.0",
    "symfony/options-resolver": "^7.3|^8.0",
    "symfony/expression-language": "^7.3|^8.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.3|^8.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.90",
    "pestphp/pest": "^4.1",
    "bentools/cartesian-product": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "BenTools\\TreeRex\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BenTools\\TreeRex\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "types:check": "vendor/bin/phpstan",
    "style:check": "vendor/bin/php-cs-fixer check",
    "style:fix": "vendor/bin/php-cs-fixer fix",
    "tests:run": "vendor/bin/pest --coverage --min=100",
    "ci:check": [
      "@types:check",
      "@style:check",
      "@tests:run"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
